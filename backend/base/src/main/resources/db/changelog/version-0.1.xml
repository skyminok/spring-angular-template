<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="tag-0" author="skyminok79">
        <tagDatabase tag="empty"/>
    </changeSet>

    <changeSet id="0000" author="skyminok79">
        <sql><![CDATA[create schema staff]]></sql>
    </changeSet>

    <changeSet id="0002" author="skyminok79">
        <createTable tableName="users" schemaName="staff">
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="varchar(256)" remarks="User login">
                <constraints nullable="false" unique="true" uniqueConstraintName="uq_users"/>
            </column>
            <column name="password_encoded" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="password_salt" type="varchar(256)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
